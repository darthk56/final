@model IEnumerable<CartItem>


<h2 class="mt-3"><i class="fas fa-list-ul"></i> Cart</h2>
<div class="list-group">
    @foreach (CartItem c in Model)
    {
        <form method="post" asp-action="Cart" asp-route-id="@c.CartItemId">
        <a class="list-group-item list-group-item-action" asp-route-id="@c.CartItemId">@c.Product.ProductName - <i style="opacity:.6;">@c.Quantity</i></a>
        <div class="col col-xs-2">
        </div>
        <button type="submit" class="btn btn-outline-primary mt-2 mb-4" >Delete</button>
        </form>
    }
</div>
